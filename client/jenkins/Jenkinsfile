pipeline {
    agent {
        docker {
            image 'node:lts-buster-slim'
            args '-p 3000:3001 -u root'
        }
    }
    stages {
        stage('Deploy FE') {
             steps {
                            sh '''
                                heroku login
                                heroku git:remote -a w2w-front
                                git subtree push --prefix client/ heroku main
                            '''
                }
        }
    }
}
